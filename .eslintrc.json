{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:vue/recommended",
    "prettier",
    "prettier/vue"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["vue", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", 2],
    "space-before-function-paren": ["error", "never"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "curly": ["error", "multi-or-nest"],
    "semi": ["error", "always"],
    "no-console": "off",
    "vue/html-self-closing": "off",
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 3,
        "multiline": {
          "max": 1,
          "allowFirstLine": true
        }
      }
    ]
  }
}
